server {
  listen   80;
  server_name  <%= node['fqdn'] %>;
  access_log  <%= node['nginx']['log_dir'] %>/<%= node['fqdn'] %>.access.log;

  location / {
     proxy_set_header   X-Real-IP $remote_addr;
     proxy_set_header   Host      $http_host;
     proxy_pass         http://127.0.0.1:2368;
  }
}
